<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:id="@+id/ll"
    android:gravity="center_horizontal"
    android:background="@drawable/background"
    >
    
	<TableLayout
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:stretchColumns="*"
	    android:id="@+id/tabella"
	    
	    >
	    <TableRow 
	        android:layout_width="wrap_content" 
        	android:layout_height="wrap_content"
	        android:id="@+id/r_uno"
	        android:layout_weight="0.33"
	        >
	         <Button android:id="@+id/uno" 
		            android:layout_width="fill_parent" 
		            android:layout_height="250px" 
		            android:layout_alignParentRight="true" 
		            android:layout_marginLeft="5px" 
		            android:text=" " 
		            android:textSize="70px" /> 
            
		    <Button android:id="@+id/due" 
		          	android:layout_width="fill_parent" 
		            android:layout_height="250px" 
		            android:layout_toLeftOf="@id/uno" 
		            android:layout_alignTop="@id/uno" 
		            android:layout_marginLeft="5px" 
		            android:text=" " 
		            android:textSize="70px" /> 
		            
		    <Button android:id="@+id/tre" 
		          	android:layout_width="fill_parent" 
		            android:layout_height="250px" 
		            android:layout_toLeftOf="@id/uno" 
		            android:layout_alignTop="@id/uno" 
		            android:layout_marginLeft="5px" 
		            android:text=" " 
		            android:textSize="70px" /> 
		    
	    </TableRow> 
	    <TableRow 
	      	 android:layout_width="wrap_content" 
        	android:layout_height="wrap_content"
	        android:id="@+id/r_due"
	        android:layout_weight="0.33"
	        
	        >
	        <Button android:id="@+id/quattro" 
		            android:layout_width="fill_parent" 
		            android:layout_height="250px" 
		            android:layout_alignParentRight="true" 
		            android:layout_marginLeft="5px" 
		            android:layout_below="@id/uno" 
		            android:text=" " 
		            android:textSize="70px" /> 
            
		     <Button android:id="@+id/cinque" 
		          	android:layout_width="fill_parent" 
		            android:layout_height="250px" 
		            android:layout_toLeftOf="@id/quattro" 
		            android:layout_alignTop="@id/quattro" 
		            android:layout_marginLeft="5px" 
		            android:text=" " 
		            android:textSize="70px" /> 
		            
		    <Button android:id="@+id/sei" 
		          android:layout_width="fill_parent" 
		            android:layout_height="250px" 
		            android:layout_toLeftOf="@id/cinque" 
		            android:layout_alignTop="@id/cinque" 
		            android:layout_marginLeft="5px" 
		            android:text=" " 
		            android:textSize="70px" /> 
	    </TableRow>
	    
	    <TableRow 
	        android:layout_width="wrap_content" 
        	android:layout_height="wrap_content"
	        android:id="@+id/r_tre"
	        android:layout_weight="0.33"
	        
	        >
		       <Button android:id="@+id/sette" 
		            android:layout_width="fill_parent" 
		            android:layout_height="250px" 
		            android:layout_alignParentRight="true" 
		            android:layout_marginLeft="5px" 
		            android:layout_below="@id/quattro" 
		            android:text=" " 
		            android:textSize="70px" /> 
		            
		     <Button android:id="@+id/otto" 
		          	android:layout_width="fill_parent" 
		            android:layout_height="250px" 
		            android:layout_toLeftOf="@id/sette" 
		            android:layout_alignTop="@id/sette" 
		            android:layout_marginLeft="5px" 
		            android:text=" " 
		            android:textSize="70px" /> 
		            
		      <Button android:id="@+id/nove" 
		          	android:layout_width="fill_parent" 
		            android:layout_height="250px" 
		            android:layout_toLeftOf="@id/sette" 
		            android:layout_alignTop="@id/sette" 
		            android:layout_marginLeft="5px" 
		            android:text=" " 
		            android:textSize="70px" /> 
	    </TableRow>			
  </TableLayout> 		
  <LinearLayout
      android:layout_width="fill_parent"
      android:layout_height="20dp"
      android:orientation="horizontal"
      android:id="@+id/textlayout"
      android:gravity="center"
           
      >	  
      
  </LinearLayout>
  
  <TextView android:id="@+id/vis" 
          android:layout_width="fill_parent" 
          android:layout_below="@id/nove" 
          android:layout_height="wrap_content" 
          android:text="@string/comincia" 
          android:gravity="center_horizontal" 
          android:layout_marginTop="20px" 
          android:textSize="20px"/> 
          
		
</LinearLayout>
